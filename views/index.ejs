<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="stylesheets/global.css" />
    <link rel="stylesheet" href="stylesheets/header.css" />
    <link rel="stylesheet" href="stylesheets/index.css" />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Monda:wght@400;700&display=swap"
    />
  </head>
  <body>
    <header>
      <div class="logo">
        <h3>BookShelf</h3>
      </div>
      <div class="header__btn">
        <button class="btn">
          <a class="header__link" href="/sign-in">Login</a>
        </button>
        <button class="btn">
          <a class="header__link" href="/register">Register</a>
        </button>
      </div>
    </header>

    <div class="books">
      <% locals.response.forEach(function(book, index) { %>
      <div class="books__single">
        <% var isbnim =
        `https://covers.openlibrary.org/b/isbn/${book.isbn}-M.jpg`; %>

        <img class="books__single__img" src="<%= isbnim %>" alt="" />
        <div class="books__single__details">
          <div>
            <h2 class="details__title"><%= book.bookTitle%></h2>

            <h4 class="details__user">Submitted by: Username</h4>
          </div>
          <div class="review__box">
            <div class="star">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="review__star"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
                />
              </svg>
              <p class="star__rating"><%= book.stars %> Stars</p>
            </div>

            <p class="details__desc"><%= book.review %></p>
          </div>

          <button class="btn readmore">
            <a href=" <%= `/bookdetails/${book.id}`;%> " class="header__link"
              >View Notes</a
            >
          </button>
        </div>
      </div>

      <% }); %>
    </div>
  </body>
</html>
